<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Image</th>
      <th>created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image.description %></td>
        <td><%= image.quantity %></td>
        <td><%= image.created_at %></td>
        <% if image.gallery.present? %>
        <tr>
        <td><%= image_tag image.gallery.image_1_url %></td>
        <td><%= image_tag image.gallery.image_2_url %></td>
       </tr>

      <% end %>
        </td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

